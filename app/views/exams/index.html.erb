<h1 id='title' >Listing exams</h1>

<%= button_tag(type: 'button', class: 'btn btn-default btn-lg' ) do %>
  Star <%= content_tag(:span, '', class: 'glyphicon glyphicon-star') %>
<% end %>

<%= button_tag('Tooltip on the right', type: 'button', class: 'btn btn-default', id: 'tooltip', data: {toggle: 'tooltip', placement: 'right'}, :'data-original-title' => 'Tooltip on the right' )%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Active</th>
			<th>Edit</th>
			<th>Delete</th>
			<th>View</th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= link_to exam.name, exam_questions_path(exam) %></td>
				<td><%= link_to exam.grade, exam_questions_path(exam) %></td>
				<td><%= link_to 'Set Active', set_active_exam_path(exam), :remote=>true %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<td><%= link_to 'View', exam_path(exam) %></td>				
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_exam_path %>
